{
    "env": {
      "jest/globals": true,
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": ["jest"],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "no-console": 0,
      "no-underscore-dangle": 0,
      "no-restricted-globals": 0,
      "linebreak-style": 0,
      "no-alert": "off"
    },
    "globals": {
      "describe": "readonly",
      "it": "readonly",
      "expect": "readonly",
      "beforeEach": "readonly"
    }
  }
  